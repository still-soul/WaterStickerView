<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContent"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_grey106_alpha24"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="2020/11/02 星期一"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvBabyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="哈哈哈哈"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvBabyAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="年龄: 1岁1个月3天" />

    <TextView
        android:id="@+id/tvBabyHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="身高: 92cm"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvBabyWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="体重: 14kg"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="最美丽的地方"
        android:textColor="@color/white"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tvDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:includeFontPadding="false"
        android:text="备注详情备注详情备注详情备注详情备注详情备注详情备注详情备注详情备注详情备注详情"
        android:textColor="@color/white"
        android:textSize="13sp" />


</LinearLayout>